{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "BotConfiguration": {
    "BotToken": "{YOUR_BOT_TOKEN}",
    "BotUserName": "{YOUR_BOT_USERNAME}",
    "ActiveChatIds": [
      "{YOUR_CHAT_ID}"
    ],
    "AdminIds": [
      "{YOUR_TELEGRAM_ID}"
    ],
    "ChatGptApiKey": "{YOUR_API_KEY}",
    "ChatGptModel": "{YOUR_GPT_MODEL}",
    "ChatGptMaxTokens": "1024"
  },
  "CharacterConfiguration": {
    "InitialMessage": "{YOUR_INITIAL_MESSAGE}",
    "RetellingPromtMessage": "{YOUR_RETELLING_MESSAGE}",
    "LastMessageCondition": "{YOUR_LAST_MESSAGE}",
    "Characters": [
      {
        "UserId": "{YOUR_TELEGRAM_ID}",
        "UserLogin": "{YOUR_TELEGRAM_LOGIN_FOR_ESCAPE}",
        "Names": [
          "{YOUR_FIRST_NAME}"
        ],
        "CharacterDescription": "{YOUR_DESCRIPTION}"
      }
    ]
  },
  "ContextConfiguration": {
    "RetellingInitPromtMessage": "{YOUR_RETELLING_MESSAGE}",
    "RetellingPostPromtMessage": "{YOUR_RETELLING_MESSAGE}",
    "MessagesCountLimit": "100",
    "MessagesCountToRetell": "10"
  }
}